services:
  spark-master-ewma:
    image: custom-spark:latest
    container_name: spark-master-ewma
    environment:
      - SPARK_MODE=master
      - SPARK_MASTER_HOST=spark-master-ewma
    ports:
      - "7078:7077"
      - "8081:8080"
    volumes:
      - ./spark-app:/opt/spark-app
    networks:
      - spark-network

  spark-worker-1-ewma:
    image: custom-spark:latest
    container_name: spark-worker-1-ewma
    environment:
      - SPARK_MODE=worker
      - SPARK_MASTER_URL=spark://spark-master-ewma:7077
    volumes:
      - ./spark-app:/opt/spark-app
    networks:
      - spark-network

  spark-worker-2-ewma:
    image: custom-spark:latest
    container_name: spark-worker-2-ewma
    environment:
      - SPARK_MODE=worker
      - SPARK_MASTER_URL=spark://spark-master-ewma:7077
    volumes:
      - ./spark-app:/opt/spark-app
    networks:
      - spark-network

  spark-worker-3-ewma:
    image: custom-spark:latest
    container_name: spark-worker-3-ewma
    environment:
      - SPARK_MODE=worker
      - SPARK_MASTER_URL=spark://spark-master-ewma:7077
    volumes:
      - ./spark-app:/opt/spark-app
    networks:
      - spark-network

networks:
  spark-network:
docker-compose -f docker-compose-wiki.yml up -d --remove-orphans
docker-compose -f docker-compose-db.yml up -d --remove-orphans
docker-compose -f docker-compose-tools.yml up -d --remove-orphans

    external: true
